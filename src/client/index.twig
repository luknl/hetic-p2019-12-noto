{# index.twig #}
{% extends "layout.twig" %}
{% set page = 'homepage' %}

{% block main %}
<section class="tofu">
  <div class="tofu__title">
    <h2 class="tofu__title__main">Say the magic word</h2>
  </div>
  <div class="tofu__input">
    <span class="tofu__input__typebar">
      |
      <input class="tofu__input__typebar__mobile" type="text">
    </span>
  </div>
  <div class="tofu__spacebar">
    <button type="button" name="button" class="tofu__spacebar__button tofu__spacebar__button--down"></button>
    <button type="button" name="button" class="tofu__spacebar__button_fill"></button>
    <svg width="3500" height="3500" class="tofu__spacebar__circle">
      <g transform="translate(1750,1740)">
        <g>
          <path d="M 0 -150 a 200 200 0 1 0 0.00001 0" fill="#272727" linejoin="round"></path>
          <animateTransform attributeType="xml" begin="indefinite" id="pause" attributeName="transform" type="scale" from="0" to="7" dur=".8s" fill="freeze"/>
        </g>
      </g>
    </svg>
  </div>
  <div class="tofu__experience">
    <img src="../img/experience.svg" alt="experience by google">
  </div>
</section>
<section class="letter">
  <div class="letter__main"></div>
  <div class="letter__noto">
    <h1 class="letter__noto__title">no<span class="letter__noto__bar"></span>to</h1>
    <p class="letter__noto__google">by Google</p>
  </div>
  <div class="letter__discover">
    <a href="storytelling.html"><img class="letter__discover__image" src="../img/enter.png" alt="enter experience"></a>
  </div>
</section>

{% endblock %}
